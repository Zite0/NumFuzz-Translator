#include "float_ops/sqrtfp64.fz"
#include "float_ops/addfp64.fz"
#include "float_ops/divfp64.fz"

function sqrt_add1 (x : num) 
{
  sd2 = addfp64 <x,1.0>;
  let d2 = sd2;
  sqrtfp64 d2
}

function sqrt_add (x : num) : M[9.993e-16]num 
{
  sd1 = sqrt_add1 x;
  let d1 = sd1;
  sd2 = sqrtfp64 x;
  let d2 = sd2;
  sd = addfp64 <d1,d2>;
  let d  = sd;
  divfp64 (1.0,d)
}

sqrt_add
